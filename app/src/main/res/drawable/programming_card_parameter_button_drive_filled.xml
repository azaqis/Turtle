<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/SpinnerBackgroundTurquoise" />
            <corners
                android:bottomRightRadius="12dp"
                android:topRightRadius="12dp" />
        </shape>
    </item>
    <item
        android:bottom="-4dp"
        android:right="-4dp"
        android:top="-4dp">
        <shape>
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="4dp"
                android:color="@color/SpinnerBackgroundTurquoise" />
        </shape>
    </item>

</layer-list>