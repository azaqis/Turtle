<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Turtle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryComplement</item>
        <item name="colorPrimaryVariant">@color/PrimaryComplement</item>
        <item name="colorOnPrimary">@color/PrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/PrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/PrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Turtle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Turtle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Turtle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>