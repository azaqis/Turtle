<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4sp"
    android:background="@drawable/controller_debug_fragment_style"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:weightSum="6"
    tools:context=".ControllerDebugFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="4dp"
        android:id="@+id/fragment_controller_debug_recycler_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:itemCount="3"
        tools:listitem="@layout/fragment_controller_debug_row_layout" />

    <Button
        android:id="@+id/fragment_controller_debug_button_clear_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/clear_list"
        android:textColor="@color/PrimaryLight" />

</LinearLayout>