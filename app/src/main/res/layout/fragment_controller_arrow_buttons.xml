<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/controller_arrows_fragment_style"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ControllerArrowButtonsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_avoid_obstacles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="@string/avoidance" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="@string/stop" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_line_follower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="@string/line_follow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_gear_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="@string/gear_up" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_up"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/controller_arrow_button_up" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_gear_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="@string/gear_down" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_left"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:background="@drawable/controller_arrow_button_left" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_down"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/controller_arrow_button_down" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_controller_arrows_button_right"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:background="@drawable/controller_arrow_button_right" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>