<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/controller_arrows_fragment_style"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ControllerArrowButtonsFragment"
    app:columnCount="1"
    app:orientation="vertical"
    app:rowCount="3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_rowWeight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_controller_arrows_button_avoid_obstacles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/avoidance" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_controller_arrows_button_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/stop" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_controller_arrows_button_line_follower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/line_follow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_rowWeight="1"
        android:weightSum="3">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_controller_arrows_button_gear_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/gear_up" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/fragment_controller_arrows_button_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/PrimaryDark"
            app:srcCompat="@drawable/controller_arrow_button_up" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_controller_arrows_button_gear_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/gear_down" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_rowWeight="1"
        android:weightSum="3">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/fragment_controller_arrows_button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/PrimaryDark"
            app:srcCompat="@drawable/controller_arrow_button_left" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/fragment_controller_arrows_button_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/PrimaryDark"
            app:srcCompat="@drawable/controller_arrow_button_down" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/fragment_controller_arrows_button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/PrimaryDark"
            app:srcCompat="@drawable/controller_arrow_button_right" />

    </LinearLayout>

</androidx.gridlayout.widget.GridLayout>