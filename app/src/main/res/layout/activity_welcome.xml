<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeActivity"
    android:padding="40dp">

    <LinearLayout
        android:id="@+id/welcome_linear_layout_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="60sp"/>

        <ImageView
            android:id="@+id/welcome_turtle_icon"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ic_icon"
            android:contentDescription="@string/turtle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_turtle"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>

        <TextView

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle_intro_1"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>

        <TextView

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle_intro_4"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_skip_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/skip"
                    android:textSize="25sp"
                    style="?android:attr/buttonStyle"
                    android:textColor="@color/PrimaryLight"
                    android:background="@color/PrimaryComplement"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_next_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/next"
                    android:textSize="25sp"
                    style="?android:attr/buttonBarButtonStyle" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/welcome_linear_layout_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="60sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ic_baseline_bluetooth_24"
            android:contentDescription="@string/turtle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_is_what_you_can_do_in"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bluetooth_connect"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"/>

        <TextView

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle_intro_bluetooth_connect"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_skip_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/skip"
                    android:textColor="@color/PrimaryLight"
                    android:textSize="25sp"
                    style="?android:attr/buttonStyle"
                    android:background="@color/PrimaryComplement"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_next_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/next"
                    android:textSize="25sp"
                    style="?android:attr/buttonBarButtonStyle" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/welcome_linear_layout_programming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="60sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ic_baseline_code_24"
            android:contentDescription="@string/turtle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_is_what_you_can_do_in"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/programming"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"/>

        <TextView

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle_intro_programming"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_skip_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/skip"
                    android:textColor="@color/PrimaryLight"
                    android:textSize="25sp"
                    style="?android:attr/buttonStyle"
                    android:background="@color/PrimaryComplement"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_next_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/next"
                    android:textSize="25sp"
                    style="?android:attr/buttonBarButtonStyle" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/welcome_linear_layout_remote_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="60sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ic_baseline_controller"
            android:contentDescription="@string/turtle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_is_what_you_can_do_in"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remote_controller"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"/>

        <TextView

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle_intro_remote_controller"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_skip_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/skip"
                    android:textColor="@color/PrimaryLight"
                    android:textSize="25sp"
                    style="?android:attr/buttonStyle"
                    android:background="@color/PrimaryComplement"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_next_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/next"
                    android:textSize="25sp"
                    style="?android:attr/buttonBarButtonStyle" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/welcome_linear_layout_manage_custom_commands"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="60sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ic_custom"
            android:contentDescription="@string/turtle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_is_what_you_can_do_in"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_custom_commands"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"/>

        <TextView

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turtle_intro_manage_custom_commands"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/welcome_button_finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/lets_get_going"
                    android:textSize="25sp"
                    style="?android:attr/buttonBarButtonStyle" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>